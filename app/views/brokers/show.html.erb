
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"><%= link_to "Home", root_url%></a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= link_to @broker.siren, broker_path%></li>
  </ol>
</nav>
<div class="d-flex justify-content-center">
  <div class="card" style="width: 400px;">
    <div class="card-body">
      <% if @broker.name == nil %>
        <h5 class="card-title">This siren is in the database but we couldn't retrieve informations for this broker</h5>
      <% else %>
        <h5 class="card-title"><%= @broker.name.upcase %></h5>
        <p class="card-text"><%= @broker.address %> </p>
      <% end %>
      <p>SIREN : <%= @broker.siren %></p>
      <%= link_to(brokers_path) do %>
      <button type="button" class="btn btn-primary">Back</button>
      <%end%>
    </div>
  </div>
</div>
<div class="m-5">
  <%= render "brokers/map_broker" %>
</div>
